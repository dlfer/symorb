		pipe = open(MOVIENAME,'w')
	elif ONLY_ONE_FRAME:
		pipe = os.popen(POV_COMMAND,'w')
	else:
		pipe = os.popen(POV_COMMAND % frame_number ,'w')
	pipe.write(tmppovfile)
	pipe.flush()
	failed=pipe.close()
	if failed: 
		print "\nThe command ``" + POV_COMMAND + "'' has failed!\n"
		doing(not_done)
		sys.exit(1)
	frame_number=frame_number + 1
doing(done)	

