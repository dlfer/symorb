	if not ONLY_ONE_FRAME: sys.stdout.write(".")
	if ( (frame_number+1) % 50 == 0) and (frame_number>0): sys.stdout.write("(%i done!)\n" % (frame_number+1)) 
	sys.stdout.flush()
	povfile_spheres=''
	for j in range(NOB):
		povfile_spheres = povfile_spheres + make_sphere(data[j][i],j+1)
